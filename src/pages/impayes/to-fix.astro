---// src/pages/impayes/to-fix.astro
import BaseLayout from '../../layouts/BaseLayout.astro';
import Pebble from '../../components/Pebble.astro';
import { Search, CheckCircle, AlertTriangle, Hourglass, Download, User, Copy, Plus, RefreshCw, FileText, Minus, Settings, Printer, X } from '@lucide/astro';

// Page metadata
const pageTitle = 'Contacts avec email manquant';
const pageDescription = 'Liste des contacts nécessitant une mise à jour de l\'email';
---
  <!-- Alpine.js Base Store -->
<script is:inline src = '/js/stores/impayesBaseStore.js'></script>
  <!-- Alpine.js State and Functions -->
<script is:inline src = '/js/pages/impayesToFixState.js'></script>

<!-- Base Layout with Parse initialization -->
<BaseLayout title={pageTitle}>
  <!-- Pebbles Background - Following Styleguide -->
  <div class="fixed inset-0 overflow-hidden -z-10">
    <div class="absolute inset-0 bg-gradient-to-br from-gray-50 to-white"></div>
    <!-- Animated Pebbles - Using Pebble component -->
    <div class="absolute inset-0">
      <!-- Pebble 1 - Primary -->
      <Pebble 
        size="large"
        color="primary"
        opacity="low"
        animation="float-1"
        position="absolute top-20 left-20"
        title="Pebble Principal - Couleur Primary #007ACE"
      />
      
      <!-- Pebble 2 - Secondary -->
      <Pebble 
        size="xlarge"
        color="secondary"
        opacity="medium"
        animation="float-2"
        position="absolute top-1/2 right-1/4"
        title="Pebble Secondaire - Couleur Secondary #00BDCF"
      />
      
      <!-- Pebble 3 - Success -->
      <Pebble 
        size="large"
        color="success"
        opacity="low"
        animation="float-3"
        position="absolute bottom-20 left-1/3"
        title="Pebble Succès - Couleur Success #00CF9B"
      />
    </div>
  </div>
  
  <!-- Main content container -->
  <div class="container mx-auto px-4 py-6 relative z-10" id="toFixPage"
       x-data="impayesState()"
       x-init="init()">
    <!-- Page Header -->
    <header class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">{pageTitle}</h1>
      <p class="text-gray-600 mb-6">{pageDescription}</p>
      
      <!-- Search Bar -->
      <div class="mb-6">
        <div class="flex flex-col sm:flex-row gap-2">
          <div class="relative flex-1">
            <input 
              type="search"
              placeholder="Rechercher..."
              class="w-full px-4 py-2 pl-10 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#007ACE] focus:border-transparent"
              x-model="searchQuery"
              @keyup.enter="performSearch()"
              data-testid="search-input"
            >
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <Search class="w-5 h-5 text-gray-400" />
            </div>
          </div>
          <button
            @click="performSearch()"
            class="px-6 py-2 bg-[#007ACE] text-white rounded-md hover:bg-[#006BCE] transition-colors flex items-center justify-center space-x-2"
            :disabled="isSearching"
            data-testid="search-button"
          >
            <span x-show="!isSearching">Rechercher</span>
            <span x-show="isSearching" class="flex items-center space-x-2">
              <span class="w-4 h-4 border-2 border-white border-t-transparent rounded-full animate-spin"></span>
              <span>Recherche...</span>
            </span>
            <Search class="w-5 h-5" />
          </button>
        </div>
      </div>
      

    </header>
    
    <!-- Main Content Area -->
    <main class="min-h-screen">
      <!-- To Fix View - Implementation -->
      <div class="space-y-4">
        <!-- Loading state -->
        <div x-show="isLoading" class="text-center py-8">
          <div class="w-12 h-12 border-4 border-yellow-500 border-t-transparent rounded-full animate-spin mx-auto mb-4"></div>
          <p class="text-gray-600">Chargement des factures à réparer...</p>
        </div>
        
        <!-- Empty state -->
        <div x-show="!isLoading && contactsWithoutEmails.length === 0" class="bg-white border border-gray-200 rounded-lg p-6 shadow-sm text-center">
          <h3 class="text-lg font-medium text-gray-900 mb-2">Aucun contact à réparer</h3>
          <p class="text-gray-600 mb-4">Tous les contacts ont des emails valides.</p>
          <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto">
            <CheckCircle class="text-green-500" />
          </div>
        </div>
        
        <!-- To Fix view with warning and actions -->
        <div x-show="!isLoading && impayesToFix.length > 0">
          <!-- Warning banner -->
          <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 mb-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <AlertTriangle class="h-5 w-5 text-yellow-400" />
              </div>
              <div class="ml-3">
                <p class="text-yellow-700">
                  <span class="font-medium">Attention!</span> 
                  <span x-text="contactsWithoutEmails.length"></span> contact(s) sans email valide.
                </p>
                <p class="text-yellow-700 mt-1">
                  Allez sur ADN, corrigez l'email du contact et cliquez sur le bouton Vérifier.
                </p>
              </div>
            </div>
          </div>
          
          <!-- Action buttons -->
          <div class="flex flex-wrap gap-3 mb-4">
            <button 
              @click="verifyMissingEmails()"
              class="px-4 py-2 bg-[#007ACE] text-white rounded-md hover:bg-[#006BCE] transition-colors flex items-center space-x-2"
              :disabled="isLoading"
            >
              <Hourglass class="w-4 h-4" />
              <span>Vérifier les emails</span>
            </button>
            <button 
              @click="exportMissingEmailsToCSV()"
              class="px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700 transition-colors flex items-center space-x-2"
            >
              <Download class="w-4 h-4" />
              <span>Exporter CSV</span>
            </button>
          </div>
          
          <!-- Simple list of contacts with missing emails -->
          <div class="bg-white border border-gray-200 rounded-lg shadow-sm overflow-hidden">
            <div class="p-4">
              <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center space-x-2">
                <AlertTriangle class="w-5 h-5 text-yellow-600" />
                <span>Contacts avec email manquant</span>
                <span class="bg-yellow-100 text-yellow-800 text-sm font-medium px-2 py-1 rounded-full ml-2" x-text="contactsWithoutEmails.length"></span>
              </h3>
              
              <div class="space-y-3">
                <template x-for="contact in contactsWithoutEmails" :key="contact.name">
                  <div class="border border-yellow-100 rounded-md p-3 hover:bg-yellow-50 transition-colors">
                    <div class="flex items-center justify-between">
                      <div class="flex items-center space-x-3 flex-1">
                        <div class="w-8 h-8 bg-yellow-100 rounded-full flex items-center justify-center flex-shrink-0">
                          <User class="w-4 h-4 text-yellow-600" />
                        </div>
                        <div class="flex-1 min-w-0">
                          <p class="font-medium text-gray-900 truncate" x-text="contact.name"></p>
                          <p class="text-sm text-gray-500">
                            <span x-text="contact.invoices.length"></span> facture(s) • 
                            <span class="font-medium text-red-600" x-text="contact.maxDelay"></span> jours max retard
                          </p>
                        </div>
                      </div>
                      
                      <div class="flex items-center space-x-3">
                        <p class="font-semibold text-[#007ACE]" x-text="contact.totalAmount.toLocaleString('fr-FR', {style: 'currency', currency: 'EUR'})"></p>
                        
                        <div class="flex items-center space-x-1">
                          <button 
                            @click="copyContactInfo(contact)"
                            class="p-1 text-gray-500 hover:text-gray-700 transition-colors"
                            title="Copier les informations du contact"
                          >
                            <Copy class="w-4 h-4" />
                          </button>
                          
                          <button 
                            @click="openSequenceDrawer(contact.invoices[0])"
                            class="p-1 text-[#007ACE] hover:text-[#006BCE] transition-colors"
                            title="Gérer la séquence"
                          >
                            <Plus class="w-4 h-4" />
                          </button>
                        </div>
                      </div>
                    </div>
                  </div>
                </template>
              </div>
              
              <!-- Summary section -->
              <div class="mt-6 pt-4 border-t border-gray-100">
                <div class="flex flex-wrap justify-between items-center gap-4">
                  <div class="flex items-center space-x-4">
                    <p class="text-sm text-gray-600">
                      <span class="font-medium" x-text="contactsWithoutEmails.length"></span> 
                      contact(s) avec email manquant
                    </p>
                    <p class="text-sm text-gray-600">
                      Total à payer: 
                      <span class="font-semibold text-[#007ACE]" 
                            x-text="contactsWithoutEmails.reduce((sum, contact) => sum + contact.totalAmount, 0).toLocaleString('fr-FR', {style: 'currency', currency: 'EUR'})"></span>
                    </p>
                  </div>
                  
                  <div class="flex flex-wrap gap-2">
                    <button 
                      @click="exportMissingEmailsToCSV()"
                      class="px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700 text-sm transition-colors flex items-center space-x-2"
                    >
                      <Download class="w-4 h-4" />
                      <span>Exporter CSV</span>
                    </button>
                    
                    <button 
                      @click="verifyMissingEmails()"
                      class="px-4 py-2 bg-[#007ACE] text-white rounded-md hover:bg-[#006BCE] text-sm transition-colors flex items-center space-x-2"
                    >
                      <RefreshCw class="w-4 h-4" />
                      <span>Vérifier à nouveau</span>
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
    
    <!-- Sequence Management Drawer -->
    <div 
      x-show="$store.impayesBase.showSequenceDrawer"
      x-transition
      class="fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-end"
      data-sequence-drawer
    >
      <div class="bg-white h-full w-full md:w-1/2 shadow-xl relative" data-sequence-drawer-content>
        <div class="p-4 border-b border-gray-200 flex justify-between items-center" data-sequence-header>
          <h3 class="text-lg font-semibold text-gray-900">
            <template x-if="$store.impayesBase.selectedImpaye">
              <span>Gérer la séquence - Facture #</span>
              <span x-text="$store.impayesBase.selectedImpaye.nfacture"></span>
            </template>
            <template x-if="!$store.impayesBase.selectedImpaye">
              <span>Gestion des séquences</span>
            </template>
          </h3>
          <button 
            @click="closeSequenceDrawer()"
            class="text-gray-500 hover:text-gray-700"
            data-sequence-close
          >
            <X class="w-4 h-4" />
            Fermer
          </button>
        </div>
        
        <div class="p-4 h-[calc(100%-120px)] overflow-auto" data-sequence-content>
          <!-- Loading state for sequences -->
          <div x-show="$store.impayesBase.isLoadingSequences" class="text-center py-8">
            <div class="w-8 h-8 border-2 border-[#007ACE] border-t-transparent rounded-full animate-spin mx-auto mb-2"></div>
            <p class="text-gray-600 text-sm">Chargement des séquences...</p>
          </div>
          
          <!-- Content when loaded -->
          <div x-show="!$store.impayesBase.isLoadingSequences" class="space-y-4">
            <!-- Current sequence info (if editing a specific invoice) -->
            <div x-show="$store.impayesBase.selectedImpaye" class="bg-gray-50 p-3 rounded-md">
              <p class="text-sm font-medium text-gray-900 mb-2">Séquence actuelle:</p>
              <div class="flex items-center justify-between">
                <div class="flex items-center space-x-2">
                  <span 
                    class="px-2 py-1 text-xs rounded-full"
                    :class="$store.impayesBase.selectedImpaye && $store.impayesBase.selectedImpaye.sequence_is_automatic ? 'bg-purple-100 text-purple-700' : 'bg-blue-100 text-blue-700'"
                    x-text="$store.impayesBase.selectedImpaye ? ($store.impayesBase.selectedImpaye.sequence_name || 'Aucune séquence') : 'Aucune séquence'"
                  ></span>
                  <span x-show="$store.impayesBase.selectedImpaye && $store.impayesBase.selectedImpaye.sequence_is_automatic" class="text-purple-600">
                    <FileText class="w-4 h-4" />
                  </span>
                </div>
                <button 
                  x-show="$store.impayesBase.selectedImpaye && $store.impayesBase.selectedImpaye.sequence_id"
                  @click="assignSequenceToInvoice($store.impayesBase.selectedImpaye.objectId, null)"
                  class="text-sm text-red-600 hover:text-red-800"
                >
                  Retirer
                </button>
              </div>
            </div>
            
            <!-- Create new sequence -->
            <div class="bg-white border border-gray-200 rounded-md p-3">
              <p class="text-sm font-medium text-gray-900 mb-2">Créer une nouvelle séquence:</p>
              <div class="space-y-2">
                <input 
                  type="text"
                  placeholder="Nom de la séquence"
                  x-model="$store.impayesBase.newSequenceName"
                  class="w-full px-3 py-2 border border-gray-300 rounded-md text-sm focus:outline-none focus:ring-1 focus:ring-[#007ACE]"
                  @keyup.enter="createSequence($store.impayesBase.newSequenceName, false); $store.impayesBase.newSequenceName = ''"
                >
                <div class="flex items-center space-x-2">
                  <label class="flex items-center text-sm">
                    <input type="checkbox" x-model="$store.impayesBase.newSequenceIsAutomatic" class="mr-2">
                    <span>Séquence automatique</span>
                  </label>
                  <button 
                    @click="createSequence($store.impayesBase.newSequenceName, $store.impayesBase.newSequenceIsAutomatic); $store.impayesBase.newSequenceName = ''; $store.impayesBase.newSequenceIsAutomatic = false"
                    class="px-3 py-1 bg-[#00CF9B] text-white rounded-md hover:bg-[#00B887] text-sm transition-colors flex items-center space-x-1"
                    :disabled="!$store.impayesBase.newSequenceName || $store.impayesBase.newSequenceName.trim() === ''"
                  >
                    <Minus class="w-4 h-4" />
                    <span>Créer</span>
                  </button>
                </div>
              </div>
            </div>
            
            <!-- Existing sequences list -->
            <div class="space-y-2">
              <p class="text-sm font-medium text-gray-900">Séquences existantes:</p>
              
              <template x-for="sequence in $store.impayesBase.sequences" :key="sequence.id">
                <div 
                  class="bg-white border border-gray-200 rounded-md p-3 hover:bg-gray-50 transition-colors"
                >
                  <div class="flex items-center justify-between">
                    <div class="flex items-center space-x-2">
                      <span 
                        class="px-2 py-1 text-xs rounded-full"
                        :class="sequence.is_automatic ? 'bg-purple-100 text-purple-700' : 'bg-blue-100 text-blue-700'"
                        x-text="sequence.name"
                      ></span>
                      <span x-show="sequence.is_automatic" class="text-purple-600">
                    <FileText class="w-4 h-4" />
                  </span>
                    </div>
                    <div class="flex items-center space-x-2">
                      <span class="text-xs text-gray-500" x-text="sequence.createdAt ? formatDate(sequence.createdAt) : 'Date inconnue'"></span>
                      <button 
                        @click.stop=""
                        class="text-gray-400 hover:text-gray-600"
                        title="Modifier"
                      >
                        <Settings class="w-4 h-4" />
                      </button>
                      <button 
                        @click="$store.impayesBase.selectedImpaye ? assignSequenceToInvoice($store.impayesBase.selectedImpaye.objectId, sequence.id) : ''"
                        class="px-3 py-1 bg-[#007ACE] text-white rounded-md hover:bg-[#006BCE] text-sm transition-colors flex items-center space-x-1"
                        :disabled="$store.impayesBase.addingSequenceId === sequence.id"
                      >
                        <span x-show="$store.impayesBase.addingSequenceId !== sequence.id">Ajouter</span>
                        <span x-show="$store.impayesBase.addingSequenceId === sequence.id">
                          <span class="w-4 h-4 border-2 border-white border-t-transparent rounded-full animate-spin"></span>
                        </span>
                      </button>
                    </div>
                  </div>
                </div>
              </template>
              
              <!-- No sequence option -->
              <div 
                x-show="$store.impayesBase.selectedImpaye"
                class="bg-white border border-gray-200 rounded-md p-3 hover:bg-gray-50 transition-colors cursor-pointer"
                @click="assignSequenceToInvoice($store.impayesBase.selectedImpaye.objectId, null)"
              >
                <div class="flex items-center justify-between">
                  <div class="flex items-center space-x-2">
                    <span class="px-2 py-1 text-xs rounded-full bg-gray-100 text-gray-700">Sans séquence</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Drawer footer -->
        <div class="absolute bottom-0 left-0 right-0 p-4 border-t border-gray-200 bg-gray-50" data-sequence-footer>
          <div class="flex justify-end space-x-2">
            <button 
              @click="closeSequenceDrawer()"
              class="px-4 py-2 bg-gray-200 text-gray-700 rounded-md hover:bg-gray-300 text-sm transition-colors"
            >
              Annuler
            </button>
            <button 
              x-show="$store.impayesBase.selectedImpaye"
              @click="closeSequenceDrawer()"
              class="px-4 py-2 bg-[#007ACE] text-white rounded-md hover:bg-[#006BCE] text-sm transition-colors"
            >
              Terminer
            </button>
          </div>
        </div>
      </div>
    </div>
    
    <!-- PDF Viewer Drawer -->
    <div 
      x-show="$store.impayesBase.showPdfDrawer"
      x-transition
      class="fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-end"
      data-pdf-viewer-drawer
    >
      <div class="bg-white h-full w-full md:w-1/2 shadow-xl relative" data-pdf-viewer-content>
        <div class="p-4 border-b border-gray-200 flex justify-between items-center" data-pdf-header>
          <h3 class="text-lg font-semibold text-gray-900">Facture PDF</h3>
          <button 
            @click="closePdfViewer()"
            class="text-gray-500 hover:text-gray-700"
            data-pdf-close
          >
            <X class="w-4 h-4" />
            Fermer
          </button>
        </div>
        
        <div class="p-4 h-[calc(100%-60px)] overflow-auto" data-pdf-display>
          <div x-show="!$store.impayesBase.currentPdfUrl" class="text-center py-12">
            <p class="text-gray-500">Aucun PDF disponible pour cette facture</p>
            <p class="text-sm text-gray-400 mt-2">Facture #<span x-text="$store.impayesBase.currentInvoiceId"></span></p>
          </div>
          
          <div x-show="$store.impayesBase.currentPdfUrl" class="h-full flex flex-col">
            <div class="mb-4">
              <h4 class="font-semibold text-gray-900">Facture PDF</h4>
              <p class="text-sm text-gray-600">Facture #<span x-text="$store.impayesBase.currentInvoiceId"></span></p>
            </div>
            
            <div class="flex-1 border border-gray-200 rounded-md overflow-hidden">
              <iframe 
                x-bind:src="$store.impayesBase.currentPdfUrl"
                class="w-full h-full"
                frameborder="0"
                allowfullscreen
              ></iframe>
            </div>
          </div>
        </div>
        
        <div class="p-4 border-t border-gray-200 flex justify-end gap-2" data-pdf-controls>
          <button 
            x-show="$store.impayesBase.currentPdfUrl"
            @click="window.open($store.impayesBase.currentPdfUrl, '_blank')"
            class="px-3 py-1 bg-[#007ACE] text-white rounded-md hover:bg-[#006BCE] flex items-center space-x-1"
          >
            <Download class="w-4 h-4" />
            <span>Télécharger</span>
          </button>
          <button 
            x-show="$store.impayesBase.currentPdfUrl"
            @click="window.print()"
            class="px-3 py-1 bg-gray-200 text-gray-700 rounded-md hover:bg-gray-300 flex items-center space-x-1"
          >
            <Printer class="w-4 h-4" />
            <span>Imprimer</span>
          </button>
        </div>
      </div>
    </div>
  </div>

</BaseLayout>


<!-- Page-specific styles -->
<style>
  /* Transition effects for view switching */
  [x-transition] {
    transition: all 0.3s ease;
  }
  
  /* Ensure proper z-index for PDF viewer */
  [x-show="$store.impayesBase.showPdfDrawer"] {
    z-index: 1000;
  }
</style>