<!--
  Composant de filtres autonome pour les séquences automatiques
  Charge les colonnes depuis /public/configs/impayes_colonnes.json
  Modifie directement requete_auto et force_erase dans la base de données
-->
---
import { Filter, Search, Trash2, Loader2, AlertTriangle } from '@lucide/astro';
---

<div class="bg-white rounded-lg shadow p-6">
  <div x-data="autoFiltersComponent()"
       x-init="init()">

    <!-- En-tête -->
    <div class="flex justify-between items-center mb-4">
      <div class="flex items-center">
        <Filter class=" w-5 h-5 text-blue-500 mr-2" />
        <h2 class="text-lg font-medium text-gray-900">Filtres Automatiques</h2>
        <span class="ml-2 text-sm text-gray-500" x-text="`(${activeFiltersCount})`"></span>
      </div>
      <span class="text-sm text-gray-500" x-text="`${activeFiltersCount} filtres actifs`"></span>
    </div>

    <!-- Force erase -->
    <div class="mb-6 p-3 bg-yellow-50 border-l-4 border-yellow-400 rounded">
      <div class="flex items-start">
        <AlertTriangle class=" h-5 w-5 text-yellow-400 flex-shrink-0" />
        <div class="ml-3">
          <h3 class="text-sm font-medium text-yellow-800">Forcer le remplacement</h3>
          <div class="mt-2">
            <p class="text-sm text-yellow-700">
              Cette option permet d'inclure des impayés qui sont déjà dans une autre séquence.
            </p>
            <div class="mt-3 flex items-center">
              <input type="checkbox" class="h-4 w-4 text-yellow-600 focus:ring-yellow-500 border-gray-300 rounded"
                     x-model="forceErase"
                     @change="saveForceErase()">
              <label class="ml-2 block text-sm text-gray-900">
                <span class="font-medium">Forcer le remplacement des séquences existantes</span>
                <span class="text-xs text-gray-600 block">Si coché, les impayés seront retirés de leur séquence actuelle pour rejoindre cette séquence automatique.</span>
              </label>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Barre de recherche -->
    <div class="mb-4">
      <div class="relative">
        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
          <Search class=" w-5 h-5 text-gray-400" />
        </div>
        <input type="text" placeholder="Rechercher un champ..."
               class="block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-md leading-5 bg-white placeholder-gray-500 focus:outline-none focus:placeholder-gray-400 focus:ring-1 focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
               x-model="searchTerm"
               @input="filterColumns()">
      </div>
    </div>

    <!-- Grille de filtres -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      <template x-for="column in filteredColumns">
        <div class="border border-gray-200 rounded-lg p-4">
          <div class="flex items-center justify-between mb-3">
            <h3 class="text-sm font-medium text-gray-900" x-text="column"></h3>
            <button class="text-red-500 hover:text-red-700 text-sm"
                   @click="removeFilter(column)"
                   x-show="filters.include[column]">
              <Trash2 class=" w-4 h-4" />
            </button>
          </div>

          <!-- Sélecteur d'opérateur -->
          <div class="mb-3">
            <select class="block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm rounded-md"
                   x-model="getOperator(column)"
                   @change="setOperator(column, $event.target.value)">
              <option value="equals">Égal à</option>
              <option value="contains">Contient</option>
              <option value="doesNotContain">Ne contient pas</option>
              <option value="startsWith">Commence par</option>
              <option value="endsWith">Finit par</option>
              <option value="isEmpty">Est vide</option>
              <option value="isNotEmpty">N'est pas vide</option>
            </select>
          </div>

          <!-- Champ de valeur -->
          <div x-show="!isEmptyOperator(filters.operators[column])">
            <input type="text"
                   class="block w-full pl-3 pr-10 py-2 border border-gray-300 rounded-md leading-5 bg-white placeholder-gray-500 focus:outline-none focus:placeholder-gray-400 focus:ring-1 focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                   x-model="filterValues[column]"
                   :placeholder="getOperatorPlaceholder(operators[column])">
          </div>
        </div>
      </template>
    </div>

    <!-- Boutons d'action -->
    <div class="mt-6 flex justify-end space-x-3">
      <button class="px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50"
             @click="resetFilters()">
        Réinitialiser
      </button>
      <button class="px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-[#007ACE] hover:bg-[#006BCE]"
             @click="saveFilters()"
             :disabled="isSaving">
        <span x-show="!isSaving">Enregistrer les filtres</span>
        <span x-show="isSaving">
          <Loader2 class=" w-4 h-4 mr-2 inline animate-spin" />
          Sauvegarde...
        </span>
      </button>
    </div>
