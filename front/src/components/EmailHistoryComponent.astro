// EmailHistoryComponent.astro
// Frontend component for displaying email modification history
// Implements the UI for US002 - Consulter l'historique des modifications d'un email planifié

import { useState, useEffect } from 'react';

// Props interface
interface Props {
  emailId: string;
  onClose?: () => void;
}

// History entry interface
interface HistoryEntry {
  id: string;
  timestamp: string;
  user: {
    id: string;
    username: string;
    name: string;
    avatar: string;
  };
  changes: {
    subject?: { old: string; new: string };
    body?: { old: string; new: string };
    recipients?: { added: string[]; removed: string[] };
  };
}

// Diff modal interface
interface DiffModalProps {
  isOpen: boolean;
  onClose: () => void;
  title: string;
  before: string;
  after: string;
  diffHtml?: string;
}

// History entry component
const HistoryEntry = ({ entry, onShowDiff }: { entry: HistoryEntry; onShowDiff: (field: string) => void }) => {
  const formatDate = (dateString: string) => {
    const date = new Date(dateString);
    return date.toLocaleString('fr-FR', {
      day: '2-digit',
      month: '2-digit',
      year: 'numeric',
      hour: '2-digit',
      minute: '2-digit'
    });
  };

  const getChangeDescription = () => {
    const changes = [];
    
    if (entry.changes.subject) {
      changes.push(`Objet : "${entry.changes.subject.old}" → "${entry.changes.subject.new}"`);
    }
    
    if (entry.changes.recipients) {
      if (entry.changes.recipients.added.length > 0) {
        changes.push(`Destinataires : +${entry.changes.recipients.added.join(', ')}`);
      }
      if (entry.changes.recipients.removed.length > 0) {
        changes.push(`Destinataires : -${entry.changes.recipients.removed.join(', ')}`);
      }
    }
    
    if (entry.changes.body) {
      changes.push('Corps : [Modification]');
    }
    
    return changes;
  };

  const hasBodyChanges = entry.changes.body;

  return (
    <div className="border border-gray-200 rounded-lg p-4 mb-4 hover:shadow-md transition-shadow">
      <div className="flex items-start justify-between">
        <div className="flex items-start space-x-3">
          <img
            src={entry.user.avatar}
            alt={entry.user.name}
            className="w-10 h-10 rounded-full object-cover"
            onError={(e) => {
              e.currentTarget.src = '/assets/default-avatar.png';
            }}
          />
          <div className="flex-1">
            <div className="flex items-baseline space-x-2">
              <span className="text-sm text-gray-500">{formatDate(entry.timestamp)}</span>
              <span className="font-medium text-gray-900">{entry.user.name}</span>
            </div>
            <div className="mt-2 space-y-1">
              {getChangeDescription().map((change, index) => (
                <div key={index} className="text-sm text-gray-700">
                  • {change}
                </div>
              ))}
            </div>
          </div>
        </div>
        {hasBodyChanges && (
          <button
            onClick={() => onShowDiff('body')}
            className="px-3 py-1 bg-blue-500 text-white text-sm rounded-md hover:bg-blue-600 transition-colors whitespace-nowrap"
          >
            Voir les détails
          </button>
        )}
      </div>
    </div>
  );
};

// Diff modal component
const DiffModal = ({ isOpen, onClose, title, before, after, diffHtml }: DiffModalProps) => {
  if (!isOpen) return null;

  return (
    <div className="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 p-4">
      <div className="bg-white rounded-lg shadow-xl w-full max-w-4xl max-h-[90vh] overflow-hidden flex flex-col">
        <div className="flex items-center justify-between p-4 border-b border-gray-200">
          <h3 className="text-lg font-medium text-gray-900">{title}</h3>
          <button
            onClick={onClose}
            className="text-gray-400 hover:text-gray-600 transition-colors"
          >
            <svg className="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
        <div className="flex-1 overflow-auto p-4">
          {diffHtml ? (
            <div dangerouslySetInnerHTML={{ __html: diffHtml }} />
          ) : (
            <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div className="border border-red-200 bg-red-50 p-4 rounded-lg">
                <h4 className="font-medium text-red-800 mb-2">AVANT</h4>
                <div className="whitespace-pre-wrap text-sm">{before}</div>
              </div>
              <div className="border border-green-200 bg-green-50 p-4 rounded-lg">
                <h4 className="font-medium text-green-800 mb-2">APRÈS</h4>
                <div className="whitespace-pre-wrap text-sm">{after}</div>
              </div>
            </div>
          )}
        </div>
        <div className="p-4 border-t border-gray-200">
          <button
            onClick={onClose}
            className="w-full py-2 px-4 bg-gray-100 text-gray-700 rounded-md hover:bg-gray-200 transition-colors"
          >
            Fermer
          </button>
        </div>
      </div>
    </div>
  );
};

// Main component
const EmailHistoryComponent = ({ emailId, onClose }: Props) => {
  const [history, setHistory] = useState<HistoryEntry[]>([]);
  const [loading, setLoading] = useState(true);
  const [error, setError] = useState<string | null>(null);
  const [diffModalOpen, setDiffModalOpen] = useState(false);
  const [diffData, setDiffData] = useState({
    title: '',
    before: '',
    after: '',
    diffHtml: ''
  });

  useEffect(() => {
    const fetchHistory = async () => {
      try {
        setLoading(true);
        setError(null);
        
        // Call the API endpoint
        const response = await fetch(`/api/emails/${emailId}/history`);
        
        if (!response.ok) {
          throw new Error('Failed to fetch email history');
        }
        
        const data = await response.json();
        
        if (data.success && Array.isArray(data.data)) {
          setHistory(data.data);
        } else {
          throw new Error('Invalid response format');
        }
        
      } catch (err) {
        console.error('Error fetching email history:', err);
        setError(err instanceof Error ? err.message : 'Unknown error');
      } finally {
        setLoading(false);
      }
    };

    fetchHistory();
  }, [emailId]);

  const handleShowDiff = async (field: string) => {
    // This would be called when "Voir les détails" is clicked
    // For now, we'll show a mock diff
    setDiffData({
      title: `COMPARAISON - ${field.toUpperCase()}`,
      before: 'Bonjour,',
      after: 'Bonjour l\'équipe,'
      diffHtml: ''
    });
    setDiffModalOpen(true);
    
    // In a real implementation, you would call the API:
    // const response = await fetch(`/api/history/${historyId}/diff/${field}`);
    // const data = await response.json();
    // setDiffData({
    //   title: `COMPARAISON - ${field.toUpperCase()}`,
    //   ...data.data
    // });
  };

  if (loading) {
    return (
      <div className="p-6 text-center">
        <div className="animate-spin rounded-full h-8 w-8 border-b-2 border-blue-500 mx-auto"></div>
        <p className="mt-2 text-gray-600">Chargement de l'historique...</p>
      </div>
    );
  }

  if (error) {
    return (
      <div className="p-6 text-center">
        <div className="text-red-500 mb-2">⚠️</div>
        <p className="text-gray-600">Erreur lors du chargement de l'historique : {error}</p>
        <button
          onClick={() => window.location.reload()}
          className="mt-4 px-4 py-2 bg-gray-100 text-gray-700 rounded-md hover:bg-gray-200 transition-colors"
        >
          Réessayer
        </button>
      </div>
    );
  }

  if (history.length === 0) {
    return (
      <div className="p-6 text-center">
        <p className="text-gray-600 italic">Aucune modification enregistrée</p>
      </div>
    );
  }

  return (
    <div className="space-y-4">
      <div className="flex items-center justify-between mb-4">
        <h2 className="text-xl font-semibold text-gray-900">HISTORIQUE DES MODIFICATIONS</h2>
        {onClose && (
          <button
            onClick={onClose}
            className="text-gray-400 hover:text-gray-600 transition-colors"
          >
            <svg className="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        )}
      </div>

      <div className="space-y-4">
        {history.map((entry) => (
          <HistoryEntry
            key={entry.id}
            entry={entry}
            onShowDiff={() => handleShowDiff('body')}
          />
        ))}
      </div>

      <DiffModal
        isOpen={diffModalOpen}
        onClose={() => setDiffModalOpen(false)}
        {...diffData}
      />
    </div>
  );
};

// Export the component
export default EmailHistoryComponent;