---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout 
  title="Hello World"
  withAuth={false}
  Alpinefile="/js/pages/helloworldState.js"
>
  <div class="container mx-auto px-4 py-8" x-data="helloworldState()">
    <h1 class="text-3xl font-bold text-gray-900 mb-6">Hello World</h1>
    
    <!-- Card principale -->
    <div class="bg-white border border-gray-200 rounded-lg p-6 shadow-sm mb-6">
      <h2 class="text-xl font-semibold text-gray-900 mb-4">Bienvenue sur la page Hello World</h2>
      
      <!-- Message conditionnel -->
      <div x-show="showMessage" x-transition class="mb-4">
        <div class="bg-[#00CF9B] bg-opacity-20 border border-[#00CF9B] rounded-md p-4 mb-4">
          <div class="flex items-center">
            <div class="flex-shrink-0 mr-3">
              <svg class="h-5 w-5 text-[#00CF9B]" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
            </div>
            <div>
              <p class="text-sm font-medium text-[#00CF9B]">Message de bienvenue</p>
              <p class="text-sm text-gray-700" x-text="message"></p>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Bouton pour basculer le message -->
      <button 
        class="bg-[#007ACE] text-white px-4 py-2 rounded-md hover:bg-[#006BCE] transition-colors mb-4"
        @click="toggleMessage()"
      >
        <span x-text="showMessage ? 'Masquer le message' : 'Afficher le message'"></span>
      </button>
    </div>
    
    <!-- Section du compteur -->
    <div class="bg-white border border-gray-200 rounded-lg p-6 shadow-sm">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Compteur interactif</h3>
      
      <div class="flex items-center space-x-4 mb-4">
        <button 
          class="bg-[#00BDCF] text-white px-4 py-2 rounded-md hover:bg-[#00ADC0] transition-colors"
          @click="decrement()"
          :disabled="count <= 0"
        >
          - Décrémenter
        </button>
        
        <span class="text-2xl font-bold text-gray-900" x-text="count"></span>
        
        <button 
          class="bg-[#00CF9B] text-white px-4 py-2 rounded-md hover:bg-[#00BE8A] transition-colors"
          @click="increment()"
        >
          + Incrémenter
        </button>
      </div>
      
      <!-- Badge d'état -->
      <div class="mt-4">
        <span 
          class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium "
          :class="{
            'bg-[#00CF9B] text-white': count > 0,
            'bg-gray-500 text-white': count === 0,
            'bg-red-500 text-white': count < 0
          }"
        >
          <span x-text="count > 0 ? 'Positif' : count < 0 ? 'Négatif' : 'Zéro'"></span>
        </span>
      </div>
    </div>
  </div>
</BaseLayout>