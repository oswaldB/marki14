--- 
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout 
  title="Liste des Séquences"
  withAuth={true}
  hideSidebar={false}
  Alpinefile="/js/pages/sequencesState.js"
>
  <div class="container mx-auto px-4 py-8" x-data="sequencesState()">
    <h1 class="text-3xl font-bold text-gray-900 mb-8">Liste des Séquences</h1>
    
    <!-- Indicateur de chargement -->
    <div x-show="isLoading" class="flex justify-center items-center py-8">
      <div class="animate-spin rounded-full h-12 w-12 border-t-2 border-b-2 border-blue-500"></div>
    </div>
    
    <!-- Message d'erreur -->
    <div x-show="error" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-6">
      <strong class="font-bold">Erreur!</strong>
      <span class="block sm:inline" x-text="error"></span>
      <button @click="fetchSequences()" class="mt-2 bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded">
        Réessayer
      </button>
    </div>
    
    <!-- Tableau des séquences -->
    <div x-show="!isLoading && !error" class="overflow-x-auto bg-white border border-gray-200 rounded-lg shadow-sm">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nom</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Statut</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Peuplement</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Relances</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Action</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <template x-for="sequence in sequences" :key="sequence.id">
            <tr 
              class="hover:bg-gray-50 cursor-pointer"
              @click="redirectToSequenceDetail(sequence.id, sequence.typePeuplement)"
            >
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900" x-text="sequence.nom"></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <span 
                  class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full "
                  :class="sequence.statut ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800'"
                  x-text="sequence.statut ? 'Actif' : 'Inactif'"
                ></span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500" x-text="sequence.typePeuplement"></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500" x-text="sequence.relancesCount"></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                <a href="#" class="text-blue-600 hover:text-blue-900">Voir détails</a>
              </td>
            </tr>
          </template>
        </tbody>
      </table>
    </div>
  </div>
</BaseLayout>