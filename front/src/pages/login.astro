---
// src/pages/login.astro
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Connexion" hideSidebar={true}>
  <div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
      <div>
        <img class="mx-auto h-12 w-auto" src="/marki-logo.png" alt="Marki Logo" />
        <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
          Connectez-vous à votre compte
        </h2>
      </div>
      
      <div id="login-form" 
           x-data="loginState()" 
           x-init="console.log('Login form initialized'); checkRememberMe()"
           class="mt-8 space-y-6">
        
        <!-- Messages d'erreur -->
        <div x-show="error" x-text="error" class="text-red-600 text-center"></div>
        
        <!-- Formulaire de connexion -->
        <form @submit.prevent="login()" class="space-y-6">
          <input type="hidden" name="remember" value="true" />
          
          <div class="rounded-md shadow-sm -space-y-px">
            <div>
              <label for="username" class="sr-only">Identifiant</label>
              <input id="username" name="username" type="text" required 
                     x-model="username" 
                     class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-marki focus:border-marki focus:z-10 sm:text-sm" 
                     placeholder="Identifiant" />
            </div>
            
            <div>
              <label for="password" class="sr-only">Mot de passe</label>
              <input id="password" name="password" type="password" required 
                     x-model="password" 
                     class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-marki focus:border-marki focus:z-10 sm:text-sm" 
                     placeholder="Mot de passe" />
            </div>
          </div>
          
          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <input id="remember-me" name="remember-me" type="checkbox" 
                     x-model="rememberMe" 
                     class="h-4 w-4 text-marki focus:ring-marki border-gray-300 rounded" />
              <label for="remember-me" class="ml-2 block text-sm text-gray-900">
                Se souvenir de moi
              </label>
            </div>
            
            <div class="text-sm">
              <a href="#" class="font-medium text-marki hover:text-marki-600">
                Mot de passe oublié ?
              </a>
            </div>
          </div>
          
          <div>
            <button type="submit" 
                    :disabled="loading" 
                    class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-marki hover:bg-marki-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-marki disabled:opacity-50 disabled:cursor-not-allowed">
              <span x-show="!loading">Connexion</span>
              <span x-show="loading" class="flex items-center">
                <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                  <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                  <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
                Connexion en cours...
              </span>
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
  
  <!-- Script Alpine.js pour la logique de connexion -->
  <script type="module" is:inline>
    import { createAuthModule } from '/js/states/auth/auth-module.js';
    
    // Initialize login state - this ensures the function is used and TypeScript won't warn
    const loginState = function() {
      return {
        username: '',
        password: '',
        rememberMe: false,
        error: null,
        loading: false,
        auth: createAuthModule(),
        
        checkRememberMe() {
          console.log('Checking remember me status');
          const rememberedUser = localStorage.getItem('rememberedUsername');
          if (rememberedUser) {
            this.username = rememberedUser;
            this.rememberMe = true;
            console.log('Remembered username found:', rememberedUser);
          }
        },
        
        async login() {
          console.log('Login attempt with:', this.username);
          this.error = null;
          this.loading = true;
          
          try {
            // Récupérer le paramètre redirect de l'URL
            const urlParams = new URLSearchParams(window.location.search);
            const redirectUrl = urlParams.get('redirect') || '/dashboard';
            console.log('Redirect URL:', redirectUrl);
            
            // Appel à l'API Parse pour la connexion
            const response = await fetch('https://dev.parse.markidiags.com/parse/login', {
              method: 'POST',
              headers: {
                'X-Parse-Application-Id': 'marki',
                'X-Parse-REST-API-Key': 'Shaky4-Exception6',
                'Content-Type': 'application/json'
              },
              body: JSON.stringify({
                username: this.username,
                password: this.password
              })
            });
            
            if (!response.ok) {
              const errorData = await response.json();
              throw new Error(errorData.error || 'Identifiants incorrects');
            }
            
            const data = await response.json();
            console.log('Login successful:', data);
            
            // Utiliser le module d'authentification pour stocker les informations
            this.auth.storeAuth(data.sessionToken, data.objectId, this.rememberMe);
            
            // Stocker l'identifiant si "Se souvenir de moi" est coché
            if (this.rememberMe) {
              localStorage.setItem('rememberedUsername', this.username);
            } else {
              localStorage.removeItem('rememberedUsername');
            }
            
            // Redirection
            window.location.href = redirectUrl;
            
          } catch (error) {
            console.error('Login error:', error);
            this.error = error.message || 'Une erreur est survenue lors de la connexion';
          } finally {
            this.loading = false;
          }
        }
      };
    };
    
    // Export to make TypeScript see it as used
    window.loginState = loginState;
  </script>
</BaseLayout>