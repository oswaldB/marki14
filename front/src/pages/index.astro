
---
// src/pages/index.astro
import BaseLayout from '../layouts/BaseLayout.astro';


// Page metadata
const pageTitle = 'Accueil';
const pageDescription = 'Bienvenue sur Marki - Gestion des impayés et séquences de relance.';

// Initialisation Alpine avec l'état du dashboard
---

<BaseLayout title="Accueil" hideSidebar="true">
  <div class="min-h-screen flex flex-col items-center justify-center bg-white p-4">
    <div class="text-center">
      <!-- Logo Marki -->
      <div class="mb-12">
        <img 
          src="/marki-logo.png" 
          alt="Marki Logo" 
          class="mx-auto w-64 h-auto"
        />
      </div>

      <!-- Bouton d'accès -->
      <a 
        href="/dashboard" 
        class="inline-block px-8 py-4 bg-marki text-white font-semibold text-lg rounded-lg shadow-lg hover:bg-marki-600 transition-colors duration-200"
        onclick="console.log('Bouton Accéder à Marki cliqué !');"
      >
        Accéder à Marki
      </a>
    </div>
  </div>
</BaseLayout>
