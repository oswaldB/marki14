---// Test page for Alpinefile prop
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout 
  title="Test Alpinefile"
  withAuth 
  Alpinefile="/js/pages/dashboardState.js"
>
  <div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-4">Test Alpinefile Prop</h1>
    <p class="text-gray-600 mb-6">This page tests the Alpinefile prop functionality.</p>
    
    <div class="bg-white border border-gray-200 rounded-lg p-6 shadow-sm">
      <h2 class="text-xl font-semibold text-gray-900 mb-4">Alpine.js Test</h2>
      <p class="text-gray-600">If the Alpinefile prop works correctly, this page should load the dashboardState.js script.</p>
      
      <div class="mt-6 p-4 bg-gray-50 rounded" x-data="{ message: 'Alpine.js is working!' }">
        <p class="text-green-600" x-text="message"></p>
        <button 
          class="mt-2 bg-blue-500 text-white px-3 py-1 rounded hover:bg-blue-600 transition-colors"
          @click="message = 'Button clicked! Alpine.js is working correctly.'"
        >
          Test Alpine.js
        </button>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  /* Simple test styles */
  .test-container {
    max-width: 800px;
    margin: 0 auto;
  }
</style>