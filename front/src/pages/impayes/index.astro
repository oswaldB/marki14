---// src/pages/impayes/index.astro
import BaseLayout from '../../layouts/BaseLayout.astro';
import Pebble from '../../components/Pebble.astro';
import { Search, BarChart2, Calendar, ChevronDown, CircleX, Download, FileText, Hourglass, Menu, Plus, Printer, Settings, X } from '@lucide/astro';


const pageTitle = 'Impayés';
const pageDescription = 'Gérez vos impayés ici.';
---
<!-- Base Layout with Parse initialization -->
<BaseLayout title={pageTitle}>
  <!-- Alpine.js State and Functions -->
<script is:inline src = '/js/pages/impayesIndexState.js'></script>
  <!-- Pebbles Background - Following Styleguide -->
  <div class="fixed inset-0 overflow-hidden -z-10">
    <div class="absolute inset-0 bg-gradient-to-br from-gray-50 to-white"></div>
    <!-- Animated Pebbles - Using Pebble component -->
    <div class="absolute inset-0">
      <!-- Pebble 1 - Primary -->
      <Pebble 
        size="large"
        color="primary"
        opacity="low"
        animation="float-1"
        position="absolute top-20 left-20"
        title="Pebble Principal - Couleur Primary #007ACE"
      />
      
      <!-- Pebble 2 - Secondary -->
      <Pebble 
        size="xlarge"
        color="secondary"
        opacity="medium"
        animation="float-2"
        position="absolute top-1/2 right-1/4"
        title="Pebble Secondaire - Couleur Secondary #00BDCF"
      />
      
      <!-- Pebble 3 - Success -->
      <Pebble 
        size="large"
        color="success"
        opacity="low"
        animation="float-3"
        position="absolute bottom-20 left-1/3"
        title="Pebble Succès - Couleur Success #00CF9B"
      />
    </div>
  </div>
  
  <!-- Main content container -->
  <div class="container mx-auto px-4 py-6 relative z-10" id="byPayeurPage"
       x-data="impayesIndexState()"
       x-init="setTimeout(() => init(), 100)">
    <!-- Page Header -->
    <header class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">{pageTitle}</h1>
      <p class="text-gray-600 mb-6">{pageDescription}</p>
      
      <!-- Search Bar -->
      <div class="mb-6">
        <div class="flex flex-col sm:flex-row gap-2">
          <div class="relative flex-1">
            <input 
              type="search"
              placeholder="Rechercher..."
              class="w-full px-4 py-2 pl-10 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#007ACE] focus:border-transparent"
              x-model="searchQuery"
              @keyup.enter="performSearch()"
              data-testid="search-input"
            >
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <Search class="w-5 h-5 text-gray-400" />
            </div>
          </div>
        </div>
      </div>

      <!-- Filter Controls -->
      <div class="mb-6 bg-white border border-gray-200 rounded-lg shadow-sm p-4">
        <h3 class="text-sm font-medium text-gray-900 mb-3">Filtres avancés :</h3>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <!-- Type Payeur Filter -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Type de payeur</label>
            <select
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-1 focus:ring-[#007ACE] focus:border-[#007ACE]"
              x-model="payerTypeFilter"
              @change="setPayerTypeFilter(payerTypeFilter)"
            >
              <option value="">Tous les types</option>
              <option value="Propriétaire">Propriétaire</option>
              <option value="Apporteur d'affaire">Apporteur d'affaire</option>
              <option value="Autre">Autre</option>
            </select>
          </div>

          <!-- Delais Filter -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Retard minimum (jours)</label>
            <input
              type="number"
              placeholder="Ex: 30"
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-1 focus:ring-[#007ACE] focus:border-[#007ACE]"
              x-model="delayFilter"
              @change="setDelayFilter(delayFilter)"
              min="0"
            >
          </div>

          <!-- Montant Filter -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Montant minimum (€)</label>
            <input
              type="number"
              placeholder="Ex: 100"
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-1 focus:ring-[#007ACE] focus:border-[#007ACE]"
              x-model="amountFilter"
              @change="setAmountFilter(amountFilter)"
              min="0"
              step="0.01"
            >
          </div>
        </div>

        <!-- Filter Actions -->
        <div class="mt-3 flex justify-end">
          <button
            @click="resetFilters()"
            class="px-4 py-2 bg-gray-100 text-gray-700 rounded-md hover:bg-gray-200 text-sm transition-colors flex items-center space-x-1"
          >
            <CircleX class="w-4 h-4" />
            <span>Réinitialiser les filtres</span>
          </button>
        </div>
      </div>
      

    </header>
    
    <!-- Main Content Area -->
    <main class="min-h-screen">
      <!-- Grouped by Payer View - Implementation -->
      <div class="space-y-4">
        <!-- Loading state -->
        <div x-show="isLoading" class="text-center py-8">
          <div class="w-12 h-12 border-4 border-[#007ACE] border-t-transparent rounded-full animate-spin mx-auto mb-4"></div>
          <p class="text-gray-600">Chargement des factures...</p>
        </div>
        
        <!-- Empty state -->
        <div x-show="!isLoading && Object.keys(sortedImpayesByPayeur).length === 0" class="bg-white border border-gray-200 rounded-lg p-6 shadow-sm text-center">
          <h3 class="text-lg font-medium text-gray-900 mb-2">Aucun impayé trouvé</h3>
          <p class="text-gray-600 mb-4">Aucune facture impayée n'a été trouvée.</p>
          <button 
            @click="syncImpayesFromPostgres()"
            class="px-4 py-2 bg-[#007ACE] text-white rounded-md hover:bg-[#006BCE] transition-colors"
          >
            Synchroniser les données
          </button>
        </div>
        
        <!-- Sorting controls for grouped by payer view -->
        <div x-show="!isLoading && Object.keys(sortedImpayesByPayeur).length > 0" class="mb-4">
          <div class="bg-white border border-gray-200 rounded-lg shadow-sm p-4">
            <div class="flex flex-wrap items-center justify-between gap-4">
              <div class="flex flex-wrap gap-2">
                <h3 class="text-sm font-medium text-gray-900 mr-4">Trier les groupes par :</h3>
                
                <!-- Sort by Amount -->
                <button
                  class="px-3 py-2 text-sm rounded-md transition-colors flex items-center space-x-1"
                  :class="sortBy === 'amount' ? 'bg-[#007ACE] text-white hover:bg-[#006BCE]' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'"
                  @click="setSortBy('amount')"
                  title="Trier par montant"
                >
                  <BarChart2 class="w-4 h-4" />
                  <span>Montant</span>
                </button>
                
                <!-- Sort by Delay -->
                <button
                  class="px-3 py-2 text-sm rounded-md transition-colors flex items-center space-x-1"
                  :class="sortBy === 'delay' ? 'bg-[#007ACE] text-white hover:bg-[#006BCE]' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'"
                  @click="setSortBy('delay')"
                  title="Trier par jours de retard"
                >
                  <Hourglass class="w-4 h-4" />
                  <span>Retard</span>
                </button>
                
                <!-- Sort by Date -->
                <button
                  class="px-3 py-2 text-sm rounded-md transition-colors flex items-center space-x-1"
                  :class="sortBy === 'date' ? 'bg-[#007ACE] text-white hover:bg-[#006BCE]' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'"
                  @click="setSortBy('date')"
                  title="Trier par date"
                >
                  <Calendar class="w-4 h-4" />
                  <span>Date</span>
                </button>
              </div>
              
              <!-- Sort direction toggle -->
              <div class="flex items-center gap-2">
                <button
                  class="px-3 py-2 text-sm rounded-md transition-colors flex items-center space-x-1"
                  :class="sortDirection === 'desc' ? 'bg-[#007ACE] text-white hover:bg-[#006BCE]' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'"
                  @click="toggleSortDirection()"
                  title="Basculer la direction de tri"
                >
                  <Menu class="w-4 h-4" />
                  <span x-text="sortDirection === 'desc' ? 'Décroissant' : 'Croissant'"></span>
                </button>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Groups by payer -->
        <div class="space-y-4 max-h-[70vh] overflow-y-auto">
        <template x-for="(invoices, payerName) in sortedImpayesByPayeur" :key="payerName">
          <div class="bg-white border border-gray-200 rounded-lg shadow-sm overflow-hidden">
            <!-- Group Header -->
            <div 
              class="p-4 border-b border-gray-100 bg-gray-50 hover:bg-gray-100 cursor-pointer transition-colors"
              @click="impayesByPayeur[payerName].length > 0 ? $el.nextElementSibling.classList.toggle('hidden') : ''"
            >
              <div class="flex items-center justify-between">
                <div class="flex items-center space-x-3">
                  <div class="w-10 h-10 bg-[#007ACE] bg-opacity-10 rounded-full flex items-center justify-center flex-shrink-0">
                    <span class="text-[#007ACE] font-semibold text-sm" x-text="payerName.charAt(0).toUpperCase()"></span>
                  </div>
                  <div>
                    <h3 class="font-semibold text-gray-900" x-text="payerName"></h3>
                    <p class="text-sm text-gray-500">
                      <span x-text="invoices.length"></span> facture(s) • 
                      <span x-text="calculateGroupTotal(invoices).toLocaleString('fr-FR', {style: 'currency', currency: 'EUR'})"></span>
                    </p>
                  </div>
                </div>
                <div class="flex items-center space-x-4">
                  <span 
                    class="px-2 py-1 text-xs rounded-full font-medium"
                    :class="findMaxDelay(invoices) > 30 ? 'bg-red-100 text-red-700' : 'bg-yellow-100 text-yellow-700'"
                    x-text="findMaxDelay(invoices) + 'j max retard'"
                  ></span>
                  <!-- Show unique sequences in header -->
                  <div class="flex items-center space-x-2">
                    <template x-for="sequence in getUniqueSequences(invoices)" :key="sequence.name">
                      <span 
                        class="px-2 py-1 text-xs rounded-full"
                        :class="sequence.is_automatic ? 'bg-purple-100 text-purple-700' : 'bg-blue-100 text-blue-700'"
                        x-text="sequence.name"
                      ></span>
                    </template>
                  </div>
                  <!-- Add to sequence button for group -->
                  <button 
                    @click.stop="openSequenceDrawer(invoices[0], invoices)"
                    class="px-3 py-1 bg-[#00CF9B] text-white rounded-md hover:bg-[#00B887] text-sm transition-colors flex items-center space-x-1"
                    title="Ajouter le groupe à une séquence"
                  >
                    <Plus class="w-4 h-4" />
                    <span>Séquence</span>
                  </button>
                  <button class="text-gray-400 hover:text-gray-600 transition-colors">
                    <ChevronDown class="w-5 h-5" />
                  </button>
                </div>
              </div>
            </div>
            
            <!-- Group Content - Invoices List - Collapsed by default -->
            <div class="p-4 space-y-3 hidden" x-show="!isLoading">
              <template x-for="invoice in invoices" :key="invoice.objectId">
                <div class="border border-gray-100 rounded-md p-3 hover:bg-gray-50 transition-colors">
                  <div class="grid grid-cols-12 gap-3 items-center">
                    <!-- Invoice Info -->
                    <div class="col-span-3">
                      <p class="font-medium text-gray-900" x-text="'Facture #' + invoice.nfacture"></p>
                      <p class="text-sm text-gray-500" x-text="invoice.reference || 'Sans référence'"></p>
                      <p class="text-xs text-gray-400 mt-1" x-text="formatAddress(invoice)"></p>
                      <p class="text-xs text-gray-400" x-show="invoice.dateDebutMission">
                        <span>Intervention: </span>
                        <span x-text="formatInterventionDate(invoice.dateDebutMission)"></span>
                      </p>
                      <p class="text-xs text-gray-400 mt-1" x-show="invoice.apporteur_nom">
                        <span>Apporteur: </span>
                        <span x-text="invoice.apporteur_nom"></span>
                      </p>
                    </div>
                    
                    <!-- Date & Delay -->
                    <div class="col-span-2">
                      <p class="text-sm text-gray-600" x-text="formatDate(invoice.datepiece)"></p>
                      <p class="text-xs" :class="calculateDaysOverdue(invoice.datepiece) > 30 ? 'text-red-600' : 'text-yellow-600'">
                        <span x-text="calculateDaysOverdue(invoice.datepiece)"></span> jours de retard
                      </p>
                    </div>
                    
                    <!-- Financial Info -->
                    <div class="col-span-3">
                      <p class="text-sm text-gray-600">
                        HT: <span x-text="(invoice.totalhtnet || 0).toLocaleString('fr-FR', {style: 'currency', currency: 'EUR'})"></span> | 
                        TTC: <span x-text="(invoice.totalttcnet || 0).toLocaleString('fr-FR', {style: 'currency', currency: 'EUR'})"></span>
                      </p>
                      <p class="font-semibold text-gray-900" x-text="(invoice.resteapayer || 0).toLocaleString('fr-FR', {style: 'currency', currency: 'EUR'})"></p>
                    </div>
                    
                    <!-- Sequence Info -->
                    <div class="col-span-2">
                      <div class="flex items-center space-x-2">
                        <span 
                          class="px-2 py-1 text-xs rounded-full"
                          :class="invoice.sequence_is_automatic ? 'bg-purple-100 text-purple-700' : 'bg-blue-100 text-blue-700'"
                          x-text="invoice.sequence_name"
                        ></span>
                        <span x-show="invoice.sequence_is_automatic" class="text-purple-600">
                      <FileText class="w-4 h-4" />
                    </span>
                      </div>
                    </div>
                    
                    <!-- Actions -->
                    <div class="col-span-2 flex justify-end space-x-2">
                      <button 
                        @click="openPdfViewer(invoice.objectId)"
                        class="px-3 py-1 bg-gray-100 text-gray-700 rounded-md hover:bg-gray-200 text-sm transition-colors"
                        title="Voir la facture PDF"
                      >
                        <span class="flex items-center space-x-1">
                          <FileText class="w-4 h-4" />
                          <span>PDF</span>
                        </span>
                      </button>
                      <button 
                        @click="openSequenceDrawer(invoice)"
                        class="px-3 py-1 bg-[#007ACE] text-white rounded-md hover:bg-[#006BCE] text-sm transition-colors"
                        title="Gérer la séquence"
                      >
                        <span class="flex items-center space-x-1">
                          <Plus class="w-4 h-4" />
                          <span>Séquence</span>
                        </span>
                      </button>
                    </div>
                  </div>
                </div>
              </template>
            </div>
          </div>
        </template>
      </div>
      </div>
    </main>
    
    <!-- Sequence Management Drawer -->
    <div 
      x-show="$store.impayesBase.showSequenceDrawer"
      x-transition
      class="fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-end"
      data-sequence-drawer
    >
      <div class="bg-white h-full w-full md:w-1/2 shadow-xl relative" data-sequence-drawer-content>
        <div class="p-4 border-b border-gray-200 flex justify-between items-center" data-sequence-header>
          <h3 class="text-lg font-semibold text-gray-900">
            <template x-if="$store.impayesBase.selectedGroupInvoices">
              <span>Gérer la séquence - Groupe de </span>
              <span x-text="$store.impayesBase.selectedGroupInvoices.length"></span>
              <span> factures</span>
            </template>
            <template x-if="!$store.impayesBase.selectedGroupInvoices && $store.impayesBase.selectedImpaye">
              <span>Gérer la séquence - Facture #</span>
              <span x-text="$store.impayesBase.selectedImpaye.nfacture"></span>
            </template>
            <template x-if="!$store.impayesBase.selectedGroupInvoices && !$store.impayesBase.selectedImpaye">
              <span>Gestion des séquences</span>
            </template>
          </h3>
          <button 
            @click="closeSequenceDrawer()"
            class="text-gray-500 hover:text-gray-700"
            data-sequence-close
          >
            <X class="w-4 h-4" />
            Fermer
          </button>
        </div>
        
        <div class="p-4 h-[calc(100%-120px)] overflow-auto" data-sequence-content>
          <!-- Loading state for sequences -->
          <div x-show="$store.impayesBase.isLoadingSequences" class="text-center py-8">
            <div class="w-8 h-8 border-2 border-[#007ACE] border-t-transparent rounded-full animate-spin mx-auto mb-2"></div>
            <p class="text-gray-600 text-sm">Chargement des séquences...</p>
          </div>
          
          <!-- Content when loaded -->
          <div x-show="!$store.impayesBase.isLoadingSequences" class="space-y-4">
            <!-- Current sequence info (if editing a specific invoice or group) -->
            <div x-show="$store.impayesBase.selectedImpaye" class="bg-gray-50 p-3 rounded-md">
              <p class="text-sm font-medium text-gray-900 mb-2">
                <template x-if="$store.impayesBase.selectedGroupInvoices">Séquences actuelles du groupe:</template>
                <template x-if="!$store.impayesBase.selectedGroupInvoices">Séquence actuelle:</template>
              </p>
              <div class="flex items-center justify-between">
                <div class="flex items-center space-x-2">
                  <span 
                    class="px-2 py-1 text-xs rounded-full"
                    :class="$store.impayesBase.selectedImpaye && $store.impayesBase.selectedImpaye.sequence_is_automatic ? 'bg-purple-100 text-purple-700' : 'bg-blue-100 text-blue-700'"
                    x-text="$store.impayesBase.selectedImpaye ? ($store.impayesBase.selectedImpaye.sequence_name || 'Aucune séquence') : 'Aucune séquence'"
                  ></span>
                  <span x-show="$store.impayesBase.selectedImpaye && $store.impayesBase.selectedImpaye.sequence_is_automatic" class="text-purple-600">
                    <FileText class="w-4 h-4" />
                  </span>
                </div>
                <button 
                  x-show="$store.impayesBase.selectedImpaye && $store.impayesBase.selectedImpaye.sequence_id"
                  @click="$store.impayesBase.selectedGroupInvoices ? assignSequenceToGroup($store.impayesBase.selectedGroupInvoices, null) : assignSequenceToInvoice($store.impayesBase.selectedImpaye.objectId, null)"
                  class="text-sm text-red-600 hover:text-red-800"
                >
                  Retirer
                </button>
              </div>
            </div>
            
            <!-- Create new sequence -->
            <div class="bg-white border border-gray-200 rounded-md p-3">
              <p class="text-sm font-medium text-gray-900 mb-2">Créer une nouvelle séquence:</p>
              <div class="space-y-2">
                <input 
                  type="text"
                  placeholder="Nom de la séquence"
                  x-model="$store.impayesBase.newSequenceName"
                  class="w-full px-3 py-2 border border-gray-300 rounded-md text-sm focus:outline-none focus:ring-1 focus:ring-[#007ACE]"
                  @keyup.enter="createSequence($store.impayesBase.newSequenceName, false); $store.impayesBase.newSequenceName = ''"
                >
                <div class="flex items-center space-x-2">
                  <label class="flex items-center text-sm">
                    <input type="checkbox" x-model="$store.impayesBase.newSequenceIsAutomatic" class="mr-2">
                    <span>Séquence automatique</span>
                  </label>
                  <button 
                    @click="createSequence($store.impayesBase.newSequenceName, $store.impayesBase.newSequenceIsAutomatic); $store.impayesBase.newSequenceName = ''; $store.impayesBase.newSequenceIsAutomatic = false"
                    class="px-3 py-1 bg-[#00CF9B] text-white rounded-md hover:bg-[#00B887] text-sm transition-colors flex items-center space-x-1"
                    :disabled="!$store.impayesBase.newSequenceName || $store.impayesBase.newSequenceName.trim() === ''"
                  >
                    <Plus class="w-4 h-4" />
                    <span>Créer</span>
                  </button>
                </div>
              </div>
            </div>
            
            <!-- Existing sequences list -->
            <div class="space-y-2">
              <p class="text-sm font-medium text-gray-900">Séquences existantes:</p>
              
              <template x-for="sequence in $store.impayesBase.sequences" :key="sequence.id">
                <div 
                  class="bg-white border border-gray-200 rounded-md p-3 hover:bg-gray-50 transition-colors"
                >
                  <div class="flex items-center justify-between">
                    <div class="flex items-center space-x-2">
                      <span 
                        class="px-2 py-1 text-xs rounded-full"
                        :class="sequence.is_automatic ? 'bg-purple-100 text-purple-700' : 'bg-blue-100 text-blue-700'"
                        x-text="sequence.name"
                      ></span>
                      <span x-show="sequence.is_automatic" class="text-purple-600">
                    <FileText class="w-4 h-4" />
                  </span>
                    </div>
                    <div class="flex items-center space-x-2">
                      <span class="text-xs text-gray-500" x-text="sequence.createdAt ? formatDate(sequence.createdAt) : 'Date inconnue'"></span>
                      <button 
                        @click.stop=""
                        class="text-gray-400 hover:text-gray-600"
                        title="Modifier"
                      >
                        <Settings class="w-4 h-4" />
                      </button>
                      <button 
                        @click="$store.impayesBase.selectedGroupInvoices ? assignSequenceToGroup($store.impayesBase.selectedGroupInvoices, sequence.id) : ($store.impayesBase.selectedImpaye ? assignSequenceToInvoice($store.impayesBase.selectedImpaye.objectId, sequence.id) : '')"
                        class="px-3 py-1 bg-[#007ACE] text-white rounded-md hover:bg-[#006BCE] text-sm transition-colors flex items-center space-x-1"
                        :disabled="$store.impayesBase.addingSequenceId === sequence.id"
                      >
                        <span x-show="$store.impayesBase.addingSequenceId !== sequence.id">Ajouter</span>
                        <span x-show="$store.impayesBase.addingSequenceId === sequence.id">
                          <span class="w-4 h-4 border-2 border-white border-t-transparent rounded-full animate-spin"></span>
                        </span>
                      </button>
                    </div>
                  </div>
                </div>
              </template>
              
              <!-- No sequence option -->
              <div 
                x-show="$store.impayesBase.selectedImpaye"
                class="bg-white border border-gray-200 rounded-md p-3 hover:bg-gray-50 transition-colors cursor-pointer"
                @click="assignSequenceToInvoice($store.impayesBase.selectedImpaye.objectId, null)"
              >
                <div class="flex items-center justify-between">
                  <div class="flex items-center space-x-2">
                    <span class="px-2 py-1 text-xs rounded-full bg-gray-100 text-gray-700">Sans séquence</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Drawer footer -->
        <div class="absolute bottom-0 left-0 right-0 p-4 border-t border-gray-200 bg-gray-50" data-sequence-footer>
          <div class="flex justify-end space-x-2">
            <button 
              @click="closeSequenceDrawer()"
              class="px-4 py-2 bg-gray-200 text-gray-700 rounded-md hover:bg-gray-300 text-sm transition-colors"
            >
              Annuler
            </button>
            <button 
              x-show="$store.impayesBase.selectedImpaye"
              @click="closeSequenceDrawer()"
              class="px-4 py-2 bg-[#007ACE] text-white rounded-md hover:bg-[#006BCE] text-sm transition-colors"
            >
              Terminer
            </button>
          </div>
        </div>
      </div>
    </div>
    
    <!-- PDF Viewer Drawer -->
    <div 
      x-show="$store.impayesBase.showPdfDrawer"
      x-transition
      class="fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-end"
      data-pdf-viewer-drawer
    >
      <div class="bg-white h-full w-full md:w-1/2 shadow-xl relative" data-pdf-viewer-content>
        <div class="p-4 border-b border-gray-200 flex justify-between items-center" data-pdf-header>
          <h3 class="text-lg font-semibold text-gray-900">Facture PDF</h3>
          <button 
            @click="closePdfViewer()"
            class="text-gray-500 hover:text-gray-700"
            data-pdf-close
          >
            <X class="w-4 h-4" />
            Fermer
          </button>
        </div>
        
        <div class="p-4 h-[calc(100%-60px)] overflow-auto" data-pdf-display>
          <div x-show="!$store.impayesBase.currentPdfUrl" class="text-center py-12">
            <p class="text-gray-500">Aucun PDF disponible pour cette facture</p>
            <p class="text-sm text-gray-400 mt-2">Facture #<span x-text="$store.impayesBase.currentInvoiceId"></span></p>
          </div>
          
          <div x-show="$store.impayesBase.currentPdfUrl" class="h-full flex flex-col">
            <div class="mb-4">
              <h4 class="font-semibold text-gray-900">Facture PDF</h4>
              <p class="text-sm text-gray-600">Facture #<span x-text="$store.impayesBase.currentInvoiceId"></span></p>
            </div>
            
            <div class="flex-1 border border-gray-200 rounded-md overflow-hidden">
              <iframe 
                x-bind:src="$store.impayesBase.currentPdfUrl"
                class="w-full h-full"
                frameborder="0"
                allowfullscreen
              ></iframe>
            </div>
          </div>
        </div>
        
        <div class="p-4 border-t border-gray-200 flex justify-end gap-2" data-pdf-controls>
          <button 
            x-show="$store.impayesBase.currentPdfUrl"
            @click="window.open($store.impayesBase.currentPdfUrl, '_blank')"
            class="px-3 py-1 bg-[#007ACE] text-white rounded-md hover:bg-[#006BCE] flex items-center space-x-1"
          >
            <Download class="w-4 h-4" />
            <span>Télécharger</span>
          </button>
          <button 
            x-show="$store.impayesBase.currentPdfUrl"
            @click="window.print()"
            class="px-3 py-1 bg-gray-200 text-gray-700 rounded-md hover:bg-gray-300 flex items-center space-x-1"
          >
            <Printer class="w-4 h-4" />
            <span>Imprimer</span>
          </button>
        </div>
      </div>
    </div>
  </div>


</BaseLayout>

